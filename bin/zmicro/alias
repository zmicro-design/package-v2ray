#!/bin/bash

help() {
  echo "Usage:"
  echo "  zmicro v2ray <args ...>"
  echo ""

  v2ray --help
}

version() {
  v2ray --version
}

core() {
  case $1 in
  -h | --help | help)
    help
    ;;
  -v | --version | version)
    version
    ;;
  *)
    v2ray "$@"
    ;;
  esac
}

run() {
  core "$@"
}

run "$@"
